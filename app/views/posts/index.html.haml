= angular_scope(@models)
= angular_scope(:newName => @posts)
= angular_scope(:me => "Tharathorn Inphen")
= angular_scope(:users => [ { :name => "a" }, { :name => "b" } ])

%p posts.test is {{posts.test}}
%p user.first is {{user.first}}
%p user.last is {{user.last}}
%p myVar is {{myVar}}
%p newName.test is {{newName.test}}
%p me is {{me}}
%p title is {{title}}

%a(href="/posts/show") Show

- @users.each do |user|
  %div{:ng_repeat => "user in users", :class => "#{unless @users.last == user then 'rails-template' end}"}
    %p{:ng_bind => "user.name"} 
      = user[:name]